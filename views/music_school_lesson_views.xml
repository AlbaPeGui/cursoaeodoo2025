<?xml version="1.0" encoding="utf-8"?>
<odoo>
<!--Actions-->
    <record id="music_school_lesson_action" model="ir.actions.act_window">
        <field name="name">lessons</field>
        <field name="res_model">music.school.lesson</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
        Create your first lesson
            </p>
        </field>
    </record>
<!-- List view -->
    <record id="music_school_lesson_view_list" model="ir.ui.view">
        <field name="name">music.school.lesson.view.list</field>
        <field name="model">music.school.lesson</field>
        <field name="arch" type="xml">
            <list multi_edit="1" string="lessons">
                <field name="name" optional="show"/>
                <field name="teacher_id" optional="show"/>
                <field name="course_id" optional="show"/>
                <field name="classroom_id" optional="show"/>
                <field name="start_date_time" optional="show"/>
                <field name="duration" optional="show"/>
                <field name="notes" optional="show"/>
            </list>
        </field>
    </record>
<!-- Form view-->
    <record id="music_school_lesson_view_form" model="ir.ui.view">
        <field name="name">music.school.lesson.view.form</field>
        <field name="model">music.school.lesson</field>
        <field name="arch" type="xml">
            <form string="lessons">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="lesson's Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="teacher_id" />
                            <field name="course_id"/>
                            <field name="classroom_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Details">
                            <group>
                                <field name="start_date_time"/>
                                <field name="duration"/>
                                <field name="notes"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
<!--Search filter-->
       <record id="music_school_lesson_view_search" model="ir.ui.view">
        <field name="name">music.school.lesson.view.search</field>
        <field name="model">music.school.lesson</field>
        <field name="arch" type="xml">
            <search string="Lesson">
                <field name="name" filter_domain="['|',('instrument_id', 'ilike', self),('name','ilike',self)]"/>
                <field name="teacher_id"/>
                <field name="course_id"/>
                <field name="start_date_time"/>
                <field name="duration"/>
                <field name="notes"/>
                <filter string="Teacher" name="group_by_teacher" context="{'group_by': 'teacher_id'}"/>
            </search>
        </field>
    </record>

<!-- Kanban view-->
    <record id="music_school_lesson_view_kanban" model="ir.ui.view">
        <field name="name">music.school.lesson.view.kanban</field>
        <field name="model">music.school.lesson</field>
        <field name="arch" type="xml">
            <kanban highlight_color="color" default_group_by="course_id" class="o_kanban_small_column" on_create="quick_create">
            <field name="name"/>
            <field name="teacher_id"/>
            <field name="course_id"/>
            <field name="classroom_id"/>
            <field name="start_date_time"/>
            <field name="duration"/>
            
                <templates>
                    <t t-name="menu">
                        <t t-if="widget.editable"><a role="menuitem" type="open" class="dropdown-item">Edit</a></t>
                        <t t-if="widget.deletable"><a role="menuitem" type="delete" class="dropdown-item">Delete</a></t>
                        <field name="color" widget="kanban_color_picker"/> 
                    </t>
                    <t t-name="card">
                        <field name="name" class="fw-bold fs-5"/>
                        <field name="teacher_id" class=""/>
                        
                        <field name="start_date_time"/>
                        <footer>
                            <div class="d-flex mt-auto align-items-center">
                                <field name="duration"/>
                            </div>
                            <field name="teacher_id" widget="many2one_avatar_user" class="ms-auto"/>
                        
                        </footer>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>
